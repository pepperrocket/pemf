---
import Layout from './Layout.astro';
import CTAButton from '../components/CTAButton.astro';

interface Props {
    title: string;
    description: string;
    publishDate: string;
    category: string;
}

const { title, description, publishDate, category } = Astro.props;
---

<Layout title={title} description={description}>
    <article class="max-w-4xl mx-auto px-4 py-12">
        <div class="mb-8">
            <span class="text-purple-600 font-semibold">{category}</span>
            <h1 class="text-4xl font-bold mt-2 mb-4">{title}</h1>
            <time class="text-gray-500">{publishDate}</time>
        </div>
        
        <div class="prose prose-lg max-w-none mb-12">
            <slot />
        </div>
        
        <div class="bg-gray-100 p-8 rounded-lg text-center">
            <h2 class="text-2xl font-bold mb-4">Ready to Experience PEMF Therapy?</h2>
            <p class="text-gray-600 mb-6">Discover how the Resona Vibe can transform your wellness journey</p>
            <CTAButton />
        </div>
    </article>
</Layout>