---
interface Props {
    title: string;
    description: string;
    href: string;
    category?: string;
}

const { title, description, href, category } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
    <a href={href} class="block p-6">
        {category && (
            <span class="text-sm text-purple-600 font-semibold mb-2 block">{category}</span>
        )}
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="text-gray-600">{description}</p>
    </a>
</article>